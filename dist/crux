#!/usr/bin/env bash

INFO="CRUX|-|https://crux.nu/|CRUX is a lightweight Linux distribution for the x86-64 architecture targeted at experienced Linux users."

function dist_releases() {
    echo $(web_pipe "http://ftp.morpheus.net/pub/linux/crux/" | grep "<a href=\"crux-" | cut -d"-" -f2 | cut -d"/" -f1 | sort -ru)
}

function dist_image_get() {
    local HASH=""
    local ISO="crux-${RELEASE}.iso"
    local URL="http://ftp.morpheus.net/pub/linux/crux/crux-${RELEASE}/iso"
    HASH=$(web_get "${URL}/crux-${RELEASE}.md5")
    echo "${URL}/${ISO} ${HASH}"
}

# vim:tabstop=4:shiftwidth=4:expandtab
