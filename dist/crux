#!/usr/bin/env bash

PRETTY_NAME="Crux"
HOMEPAGE="https://crux.nu/"
INFO="CRUX|Independent|-|https://crux.nu/|CRUX is a lightweight Linux distribution for the x86-64 architecture targeted at experienced Linux users."

function dist_releases() {
    echo 3.7 3.6.1 3.6 3.5 3.4 3.3 3.2 3.1 3.0 2.8 2.7.1 2.7 2.6 2.5 2.4 2.3 2.2 2.1 2.0 1.3 1.2 1.1 1.0 0.9.4 0.9.3 0.9.2
}

function dist_image() {
    local HASH=""
    local ISO="crux-${RELEASE}.iso"
    local URL="http://ftp.morpheus.net/pub/linux/crux/crux-${RELEASE}/iso"
    HASH=$(wget -q -O- "${URL}/crux-${RELEASE}.md5")
    echo "${URL}/${ISO} ${HASH}"
}

# vim:tabstop=4:shiftwidth=4:expandtab
