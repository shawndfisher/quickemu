#!/usr/bin/env bash

INFO="AsipreOS|-|https://sites.google.com/site/arosaspireone/|Free, open source, powerful AmigaOS clone."

GUEST="aspireos"

function dist_releases() {
    echo 2.22
}

function dist_image_get() {
    local HASH=""
    local URL="http://arosarchives.os4depot.net/download.php?file=development/misc"
    local ISO="aspireos_v.${RELEASE}_i386.rar"

    echo "${URL}"/"${ISO}" "${HASH}"
}

function dist_image_post_get() {
    if [[ ${ISO} = *".rar"* ]]; then
        unrar x -ep ${VM_PATH}/${ISO} -op ${VM_PATH}
        rm -f "${VM_PATH}/${ISO}"
        ISO="$(ls -1 "${VM_PATH}/"*.iso | cut -d'/' -f2)"
    fi
}

function dist_vm_option_tweak() {
    echo "boot=\"legacy\"" >> "${CONF_FILE}"
}

# vim:tabstop=4:shiftwidth=4:expandtab
