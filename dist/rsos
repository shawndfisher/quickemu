#!/usr/bin/env bash

PRETTY_NAME="RSOS"
HOMEPAGE="https://www.steffes.industries/software"
INFO="RSOS|Debian|-|https://www.steffes.industries/software|RSOS is a minimalist system. Based on Debian Linux and XFCE, the system offers high performance even on older computers and at the same time impresses with its modern and intuitive design."

function dist_releases() {
    echo latest
}

function dist_image() {
    local HASH=""
    local URL="https://www.steffes.industries/download_rsos"
    local ISO=""
    echo "${URL}"
}

function dist_image_handle() {
    if [ -f "${VM_PATH}/download_rsos" ]; then
        ISO="${VM_PATH}/RSOS-${RELEASE}-amd64.hybrid.iso"
        mv "${VM_PATH}/download_rsos" "${ISO}"
    fi
}

