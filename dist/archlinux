#!/usr/bin/env bash

INFO="Arch Linux|-|https://archlinux.org/|Lightweight and flexible LinuxÂ® distribution that tries to Keep It Simple."

function dist_releases() {
    echo latest
}

function dist_image_get() {
    local HASH=""
    local ISO=""
    local URL="https://mirror.rackspace.com/archlinux"
    ISO=$(web_pipe "https://archlinux.org/releng/releases/json/" | jq -r '.releases[0].iso_url')
    HASH=$(web_pipe "https://archlinux.org/releng/releases/json/" | jq -r '.releases[0].sha1_sum')
    echo "${URL}${ISO} ${HASH}"
}

