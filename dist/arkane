#!/usr/bin/env bash

INFO="Arkane Linux|-|https://arkanelinux.org/|Arkane Linux is an opinionated, immutable, atomic, multi-root Arch-based distibution which aims to provide a GNOME-centered experienced with minimal yet full featured and sensible non-intrusive defaults."

function dist_releases() {
    echo $(web_pipe "https://download.arkanelinux.org/arkane-arkdep/" | grep "<a href=\"arkanelinux-arkdep-" | cut -d"-" -f3 | cut -d"/" -f1 | sort -ru)
}

function dist_image_get() {
    local HASH=""
    local URL=""
    local ISO=""
    URL="https://download.arkanelinux.org/arkane-arkdep/arkanelinux-arkdep-${RELEASE}"
    ISO="arkanelinux-arkdep-${RELEASE}-uefi_only.iso"
    HASH=$(web_pipe "${URL}/${ISO}.sha256sum" | grep "${ISO}")
    echo "${URL}/${ISO} ${HASH}"
}

function dist_vm_option_tweak() {
    echo "disk_size=\"64G\"" >> "${CONF_FILE}"
    echo "ram=\"4G\"" >> "${CONF_FILE}"
}

# vim:tabstop=4:shiftwidth=4:expandtab
