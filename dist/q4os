#!/usr/bin/env bash

INFO="Q4OS|-|https://q4os.org/|fast and friendly, desktop oriented operating system based on Debian Linux."

function dist_releases() {
    echo plasma trinity
}

function dist_image_get() {
    local HASH=""
    local URL="https://sourceforge.net/projects/q4os/files/stable"
    local ISO=""
    case ${RELEASE} in
        trinity) ISO="q4os-5.4-x64-tde.r2.iso";;
        *) ISO="q4os-5.4-x64.r2.iso";;
    esac
    HASH=$(web_pipe "${URL}/md5sum.txt" | grep "${ISO}" | cut -d' ' -f1)
    echo "${URL}/${ISO} ${HASH}"
}

# vim:tabstop=4:shiftwidth=4:expandtab
