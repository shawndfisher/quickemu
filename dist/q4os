#!/usr/bin/env bash

PRETTY_NAME="Q4OS"
HOMEPAGE="https://q4os.org/"

function dist_releases() {
    echo plasma trinity
}

function dist_image() {
    local HASH=""
    local URL="https://sourceforge.net/projects/q4os/files/stable"
    local ISO=""

    case ${RELEASE} in
        trinity)
            ISO="q4os-5.4-x64-tde.r2.iso"
            ;;
        *)
            ISO="q4os-5.4-x64.r2.iso"
            ;;
    esac

    HASH="$(wget -q -O- ${URL}/md5sum.txt | grep "${ISO}" | cut -d' ' -f1)"
    
    echo "${URL}/${ISO} ${HASH}"
}

