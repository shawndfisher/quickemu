#!/usr/bin/env bash

PRETTY_NAME="SteamOS HoloISO"
HOMEPAGE="https://github.com/HoloISO/holoiso"
INFO="SteamOS HoloISO|Arch,SteamOS|-|https://github.com/HoloISO/holoiso|Bring the Steam Decks SteamOS Holo redistribution and provide a close-to-official SteamOS experience."

function dist_releases() {
    echo "$(web_pipe "https://github.com/HoloISO/releases/releases/latest" | grep -o -e 'releases/tag/[[:digit:]]\+\.[[:digit:]]\+\.[[:digit:]]' | head -n 1 | cut -d'/' -f 3)"
}

function dist_image() {
    local HASH=""
    local URL=$(web_pipe "https://api.github.com/repos/HoloISO/releases/releases" | jq ".[] | select(.tag_name==\"${RELEASE}\") | .body" | grep -Po "https://\S+holoiso.ru.eu.org/\S+.iso" | head -n 1)
    echo "${URL} ${HASH}"
}

# vim:tabstop=4:shiftwidth=4:expandtab
