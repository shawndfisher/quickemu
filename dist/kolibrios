#!/usr/bin/env bash

PRETTY_NAME="KolibriOS"
HOMEPAGE="https://kolibrios.org/en/"
INFO="KolibriOS|Independent|-|http://kolibrios.org/en/|Tiny yet incredibly powerful and fast operating system."

GUEST="kolibrios"

function dist_releases() {
    echo latest
}

function dist_image() {
    local HASH=""
    local ISO="kolibri.iso"
    local URL="https://builds.kolibrios.org/eng"
    echo "${URL}/${ISO} ${HASH}"
}

function dist_vm_option_tweak() {
    echo "boot=\"legacy\"" >> "${CONF_FILE}"
    echo "disk_size=\"2G\"" >> "${CONF_FILE}"
    echo "ram=\"128M\"" >> "${CONF_FILE}"
}

# vim:tabstop=4:shiftwidth=4:expandtab
